@model DiveCompMVC.Models.ViewModel

@{
    ViewData["Title"] = "Add Judge";
}

<h1>Select which judge to add to @Model.AllContests[0].Name</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllJudges)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.ActionLink("Add judge", "AddJudgesToContest", "Contest", new { judgeId = @item.Id, contestId = Model.AllContests[0].Id }, null)
                </td>
            </tr>
        }
    </tbody>
</table>