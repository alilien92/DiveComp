@model DiveCompMVC.Models.ViewModel

@{
    ViewData["Title"] = "Add Judge";
}

<h1>Confirm adding diver</h1>

<div>
    <h4>Judge</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.AllJudges[0].FirstName)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AllJudges[0].LastName)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Confirm adding judge", "AddJudgesToContest", "Contest", new { diverId = Model.AllJudges[0].Id, contestId = Model.AllContests[0].Id }, null)
</div>
