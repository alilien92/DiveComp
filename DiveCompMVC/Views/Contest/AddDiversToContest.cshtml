@model DiveCompMVC.Models.ViewModel

@{
    ViewData["Title"] = "Add divers test";
}

<h1>Add divers to @Html.DisplayFor(modelItem => Model.AllContests[0].Name)</h1>

<h1>Added divers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllParticipants)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DiverId)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Done adding divers", "ConfirmAddedDivers", "Contest", new { contestId = Model.AllContests[0].Id }, null)
</div>

<h1>Added divers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Club
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllDivers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Club)
                </td>

                <td>
                    @Html.ActionLink("Add to contest", "AddDiver", "Contest", new { diverId = item.Id, contestId = Model.AllContests[0].Id }, null)
                </td>
            </tr>
        }
    </tbody>
</table>