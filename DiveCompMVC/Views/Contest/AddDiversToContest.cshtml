@model DiveCompMVC.Models.ViewModel

@{
    ViewData["Title"] = "Add divers";
}

<h2>Added divers to @Html.DisplayFor(modelItem => Model.AllContests[0].Name)</h2>
<nav>
    @Html.ActionLink("Add diver to contest", "AddDiver", "Contest", new { contestId = Model.AllContests[0].Id }, null)
</nav>
<section>
    <p></p>
</section>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Club
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllDivers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Club)
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Continue", "AddJudgesToContest", "Contest", new { contestId = Model.AllContests[0].Id }, null)