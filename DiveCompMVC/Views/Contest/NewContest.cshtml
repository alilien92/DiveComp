@model DiveCompMVC.Models.ViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddContest" asp-controller="Contest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Contests.Name" class="control-label"></label>
                <input asp-for="Contests.Name" class="form-control" placeholder="" />
                <span asp-validation-for="Contests.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contests.Club" class="control-label"></label>
                <input asp-for="Contests.Club" class="form-control" />
                <span asp-validation-for="Contests.Club" class="text-danger"></span>
            </div>
            
            @ViewBag.Message
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>