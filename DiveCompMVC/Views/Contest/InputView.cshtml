@model DiveCompMVC.Models.ViewModel


<div class="table">
    <table>
        <tr>
            <td>
                @Model.Contests.Name
            </td>
            <td>
                @Model.Contests.Club
            </td>
    </table>
</div>

<h3>Add Judge To Contest</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddJudge" asp-controller="NewContest">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Judges.FirstName" class="control-label"></label>
                <input asp-for="Judges.FirstName" class="form-control" placeholder="" />
                <span asp-validation-for="Judges.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Judges.LastName" class="control-label"></label>
                <input asp-for="Judges.LastName" class="form-control" placeholder="" />
                <span asp-validation-for="Judges.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Judges.Org" class="control-label"></label>
                <input asp-for="Judges.Org" class="form-control" />
                <span asp-validation-for="Judges.Org" class="text-danger"></span>
            </div>

            @ViewBag.Message
            <div class="form-group">
                <input type="submit" value="Add Judge" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h3>Add Event To Contest</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEvent" asp-controller="Event">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Events.Name" class="control-label"></label>
                <input asp-for="Events.Name" class="form-control" placeholder="" />
                <span asp-validation-for="Events.Name" class="text-danger"></span>
            </div>
            
            <div class="row" hidden>
                @Html.HiddenFor(model => model.Events.ContestId)
                <input asp-for="Events.ContestId" type="hidden" id="cName"  value=@Model.Contests.Id />
            </div>

            @ViewBag.Message
            <div class="form-group">
                <input type="submit" value="Add Event" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
