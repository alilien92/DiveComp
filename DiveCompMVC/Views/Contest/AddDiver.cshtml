@model DiveCompMVC.Models.ViewModel

@{
    ViewData["Title"] = "Add Diver";
}

<h1>Select which diver to add to @Model.AllContests[0].Name</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Club
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllDivers)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Club)
            </td>
            <td>
                @Html.ActionLink("Add diver", "AddDiverConfirmed", "Contest", new { diverId = @item.Id, contestId = Model.AllContests[0].Id }, null)
            </td>
        </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Return to Added Divers", "AddDiversToContest", "Contest", new { contestId = Model.AllContests[0].Id }, null)
