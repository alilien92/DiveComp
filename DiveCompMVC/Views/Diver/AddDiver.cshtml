@model DiveCompMVC.Models.ViewModel

@{
    Layout = "_Layout";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Diver</title>
</head>
<body>

    <h4>Input relevant data</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddDiver" asp-controller="Diver">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Divers.FirstName" class="control-label"></label>
                    <input asp-for="Divers.FirstName" class="form-control" />
                    <span asp-validation-for="Divers.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Divers.LastName" class="control-label"></label>
                    <input asp-for="Divers.LastName" class="form-control" />
                    <span asp-validation-for="Divers.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Divers.Club" class="control-label"></label>
                    <input asp-for="Divers.Club" class="form-control" />
                    <span asp-validation-for="Divers.Club" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Divers.Country" class="control-label"></label>
                    <input asp-for="Divers.Country" class="form-control" />
                    <span asp-validation-for="Divers.Country" class="text-danger"></span>
                </div>
                @ViewBag.Message
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
