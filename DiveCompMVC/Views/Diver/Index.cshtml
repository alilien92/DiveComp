@model DiveCompMVC.Models.ViewModel


@{
    ViewData["Title"] = "Registered Divers";
}

@Html.ActionLink("Create new diver", "Create", "Diver", null, null)

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Club
            </th>
            <th>
                Nationality
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllDivers)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Club)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td></td>
        </tr>
        }
    </tbody>
</table>