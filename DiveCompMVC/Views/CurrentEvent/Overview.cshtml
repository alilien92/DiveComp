@model DiveCompMVC.Models.ActiveContestVM


    <head>
        <style>
            .all-tables {
                margin: 0;
                padding: 5px;
                background-color: whitesmoke;
            }

                .all-tables > h1, .FixedSizedTable {
                    margin: 15px;
                    padding: 15px;
                }

            .FixedSizedTable {
                padding: 2px;
                background: white;
                margin-left: auto;
                margin-right: auto;
            }

                .FixedSizedTable > h2, p {
                    margin: 8px;
                    font-size: 90%;
                }
        </style>
    </head>

    <h1>Overview</h1>

    <div class="all-tables">

        <div class="thead-dark">
            <h4>@Model.contest.Name @Model.contest.Type.Gender @Model.contest.Type.Type @Model.contest.Type.Height m</h4>
            <br />
            <h5>@Model.contest.City  @Model.contest.Date.ToShortDateString() </h5>
            <hr />
        </div>
            <h5>Judges</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Org
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.judges)
                    {
                        <tr>
                            <td>
                                @item.FirstName @item.LastName
                            </td>
                            <td>
                                @item.Org
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <h5>Divers</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Club
                        </th>
                        <th>
                            Country
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.divers)
                    {
                        <tr>
                            <td>
                                @item.FirstName @item.LastName
                            </td>
                            <td>
                                @item.Club
                            </td>
                            <td>
                                @item.Country
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="btn">
                <button class="btn-outline-dark" name="start" type="button">

                    @Html.ActionLink("Start", "StartContest", "CurrentEvent", new { id = @Model.contest.Id }, null)

                </button>
            </div>




    </div>
